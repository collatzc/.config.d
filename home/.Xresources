!xrdb ~/.Xresources

! Solarized color scheme for the X Window System
! http://ethanschoonover.com/solarized

! Common

#define S_yellow        #b58900
#define S_orange        #cb4b16
#define S_red           #dc322f
#define S_magenta       #d33682
#define S_violet        #6c71c4
#define S_blue          #268bd2
#define S_cyan          #2aa198
#define S_green         #859900


! Dark

#define S_base03        #002b36
#define S_base02        #073642
#define S_base01        #586e75
#define S_base00        #657b83
#define S_base0         #839496
#define S_base1         #93a1a1
#define S_base2         #eee8d5
#define S_base3         #fdf6e3

*color0:                  S_base02
*color1:                  S_red
*color2:                  S_green
*color3:                  S_yellow
*color4:                  S_blue
*color5:                  S_magenta
*color6:                  S_cyan
*color7:                  S_base2
*color9:                  S_orange
*color8:                  S_base03
*color10:                 S_base01
*color11:                 S_base00
*color12:                 S_base0
*color13:                 S_violet
*color14:                 S_base1
*color15:                 S_base3

Xcursor.size:          16

URxvt.font:            xft:FiraCode Nerd Font, xft:Source Han Sans, xft:emoji
URxvt*boldFont:        xft:FiraCode Nerd Font:bold, xft:Source Han Sans:bold, xft:emoji
URxvt*italicFont:      xft:FiraCode Nerd Font:italic, xft:Source Han Sans, xft:emoji
URxvt*boldItalicFont:  xft:FiraCode Nerd Font:bold:italic, xft:Source Han Sans, xft:emoji
URxvt.letterSpace:     0
URxvt.secondaryWheel:  1
URxvt.scrollBar:       false
URxvt.saveLines:       10000
URxvt.skipBuiltinGlyphs: true
URxvt.cursorBlink:     1

URxvt.perl-ext-common: default,matcher,tabbedex,resize-font,keyboard-select,selection-to-clipboard,url-select,clipboard,urxvt-colors
URxvt.tabbed.new-button: false
URxvt.clipboard.autocopy: true
URxvt.keysym.CM-c:    perl:urxvt-colors:cycle
URxvt.matcher.render.0: Uline Bold fg5
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s:      perl:keyboard-select:search
URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.keysym.M-c:      perl:clipboard:copy
URxvt.keysym.M-v:      perl:clipboard:paste
URxvt.keysym.M-C-v:    perl:clipboard:paste_escaped
URxvt.keysym.C-Down:   resize-font:smaller
URxvt.keysym.C-Up:     resize-font:bigger
URxvt.keysym.Control-t:     perl:tabbedex:new_tab
URxvt.keysym.Control-Tab: perl:tabbedex:next_tab

URxvt.tabbed.autohide: true
URxvt.tabbed.tabbar-fg: 10
URxvt.tabbed.tabbar-bg: 16
URxvt.tabbed.tab-fg: 6
URxvt.tabbed.tab-bg: 16
URxvt.url-launcher:    /usr/bin/xdg-open
! For the Ctrl+Shift bindings to work, a default binding needs to be disabled
URxvt.iso14755: false
URxvt.iso14755_52: false

!Xft.dpi:               96
Xft.scale:             1.0
Xft.autohint:          0
Xft.antialias:         true
Xft.hinting:           1
Xft.lcdfilter:         lcddefault
Xft.hintstyle:         hintslight
!Xft.hintstyle:         hintfull
Xft.rgba:              rgb

URxvt.keysym.KP_Add:    +
URxvt.keysym.KP_Subtract: -
URxvt.keysym.KP_Multiply: *
URxvt.keysym.KP_Divide  : /
URxvt.keysym.KP_Decimal : .
URxvt.keysym.KP_Separator : ,
URxvt.keysym.KP_1:      1
URxvt.keysym.KP_2:      2
URxvt.keysym.KP_3:      3
URxvt.keysym.KP_4:      4
URxvt.keysym.KP_5:      5
URxvt.keysym.KP_6:      6
URxvt.keysym.KP_7:      7
URxvt.keysym.KP_8:      8
URxvt.keysym.KP_9:      9
URxvt.keysym.KP_0:      0

URxvt.termName: screen-256color
URxvt.matcher.button: 1
URxvt.geometry: 140x40
*internalBorder: 6
URxvt.depth: 32
URxvt.colorIT: #87af5f
URxvt.colorBD: #d7d7d7
URxvt.colorUL: #87afd7

! special
*.foreground:   #00bb00
*.background:   [89]#001100
*.cursorColor:  #00bb00

! black
*.color0:       #001100
*.color8:       #007700

! red
*.color1:       #007700
*.color9:       #007700

! green
*.color2:       #00bb00
*.color10:      #00bb00

! yellow
*.color3:       #007700
*.color11:      #007700

! blue
*.color4:       #009900
*.color12:      #009900

! magenta
*.color5:       #00bb00
*.color13:      #00bb00

! cyan
*.color6:       #005500
*.color14:      #005500

! white
*.color7:       #00bb00
*.color15:      #004000

